[user]
	name = Fabiano Frizzo
	email = ffrizzo@gmail.com
[credential]
	helper = osxkeychain
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[merge]
	summary = true
[core]
	excludesfile = ~/.gitignore-global
	editor = code -n -w
[push]
	default = current
[commit]
	# https://help.github.com/articles/signing-commits-using-gpg/
	gpgsign = true
	template = ~/.stCommitMsg
[diff]
	renames = copies
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
[mergetool "sourcetree"]
	trustExitCode = true
[pull]
	rebase = true
[include]
	path = 	~/.gitconfig-confidential
