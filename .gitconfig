[user]
	name = Fabiano Frizzo
	email = ffrizzo@gmail.com
[credential]
	helper = osxkeychain
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[merge]
	summary = true
[core]
	excludesfile = ~/.gitignore-global
	hooksPath = ~/.git-templates
	editor = code -n -w
[push]
	default = current
[alias]
	st=status
	co=checkout
	br=branch
	rb=rebase
	mg=merge
	cm=commit -a --amend -C HEAD
	ci=commit -a -v -m
	pu=push
	pl=pull
[commit]
	# https://help.github.com/articles/signing-commits-using-gpg/
	gpgsign = false
	template = ~/.stCommitMsg
[diff]
	renames = copies
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[pull]
	rebase = true
[include]
	path = 	~/.gitconfig-confidential